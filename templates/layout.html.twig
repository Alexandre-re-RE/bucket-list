<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bucket-List{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <header>
            <a class="site-title" href="{{ path('home') }}" title="Bucket-List | Home">
                <img src="{{ asset('img/logo.png') }}" alt="Bucket-List"> Bucket-List
            </a>
            <nav>
                <ul>
                    <li><a href="{{ path("home") }}" title="Bucket-List | Home">Home</a></li>
                    <li><a href="{{ path("idea_list") }}" title="Latest ideas">Latest ideas</a></li>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path("idea_add") }}" title="Latest ideas">Create ideas</a></li>
                    {% endif %}
                    <li><a href="{{ path("about_us") }}" title="Latest ideas">About us</a></li>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path("app_logout") }}" title="Latest ideas">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path("app_login") }}" title="Latest ideas">login</a></li>
                        <li><a href="{{ path("app_register") }}" title="Latest ideas">register</a></li>
                    {% endif %}

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        Hello {{app.user.username}}
                    {% endif %}
                </ul>
            </nav>
        </header>

        <main>
            {% block main %}{% endblock %}
        </main>

        <footer>
            Â© {{ "now"|date("Y") }} Bucket-List
        </footer>
    </div>
</body>
</html>